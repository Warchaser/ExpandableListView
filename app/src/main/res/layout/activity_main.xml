<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.warchaser.expandablelistview.MainActivity">

    <RelativeLayout
        android:id="@+id/ly_titleBar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_titleBar_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/check_box_style"
            android:button="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <ExpandableListView
        android:id ="@+id/expendlist"
        android:layout_width ="match_parent"
        android:layout_height ="match_parent"
        android:layout_below="@+id/ly_titleBar"
        android:layout_above="@+id/ly_bottomBar"/>

    <RelativeLayout
        android:id="@+id/ly_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_totalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:text="123"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

</RelativeLayout>
